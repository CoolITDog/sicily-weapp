.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.block{
  margin: 80rpx 20rpx;
  padding: 40rpx 28rpx;
  background: #fff;
  box-shadow: 0 4rpx 10rpx 0 rgba(51, 51, 51, 0.10);
  border-radius: 8rpx;
  display: flex;
}

.block .img {
  width: 100%;
  height: 100%;
  border-radius: 68rpx;
}

.group{
  background: #fff;
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #333;
}
.group .item{
  height: 102rpx;
  line-height: 102rpx;
  border-bottom: 2rpx solid #EEEEEE;
  display: flex;
  align-items: center;
  padding-right: 40rpx;
  position: relative;
}
.label{
  width: 25%;
  margin-right: 40rpx; 
  padding-right: 20rpx;
  padding-left: 20rpx;
}
.label text{
  font-size: 20rpx;
}
.group .item input{
  flex: 1;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  color: #333;
}
.input-color{
  color: #999;
}
.btn{
  width: 80%;
  margin: 40rpx auto;
  background: #1979F1;
  border-radius: 8rpx;
  text-align: center;
  line-height: 94rpx;
  height: 94rpx;
  color: #fff;
  font-size: 32rpx;
  letter-spacing: 2.28rpx;
}