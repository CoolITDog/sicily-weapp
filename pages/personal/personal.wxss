.layout{
  padding-top: 0;
}
.user-info {
  width: 100%;
  height: 346rpx;
  position: relative;
  border-radius: 20rpx;
}

.user-info-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.user-info-box {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 9;
  box-sizing: border-box;
  padding: 136rpx 0 72rpx 60rpx ;
  font-size: 24rpx;
  color: #fff;
  background-color: #1296db;
}

.user-info-box .user-img {
  width: 136rpx;
  height: 136rpx;
  border-radius: 100%;
  margin-right: 40rpx;
  overflow: hidden;
}
.user-info-box .user-img .default-avatar{
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.user-info-box .wx {
  font-size: 32rpx;
  padding: 30rpx 0 14rpx;
}
.shop-name{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  width: 90%;
  font-weight: normal;
}
.navigation-btn{
  position: absolute;
  top: 102rpx;
  right: 40rpx;
}
.navigation-btn image{
  width: 28rpx;
  height: 28rpx;
  display: block;
  margin-bottom:18rpx;
}
.wx-avatar{
  position: absolute;
  top: 50%;
  left: 236rpx;
  transform: translateY(calc(-50% + 32rpx));
  font-size: 32rpx;
}
.wx-phone{
  position: relative;
}
.wx-phone button,.wx-avatar button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.pull-left {
  float: left;
}
/* list.wxss */
.group{
  background: #fff;
  padding-left: 40rpx;
}
.group>view{
  height: 102rpx;
  line-height: 102rpx;
  font-size: 32rpx;
  color: #333333;
  border-bottom: 2rpx solid #EEE;
  position: relative;
  display: flex;
  align-items: center;
}
.group view image{
  width: 40rpx;
  height: 44rpx;
  margin-right: 28rpx;
}
.red-dot{
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #ff3a3a;
  border-radius: 100%;
  margin-left: 20rpx;
}
.arrow::after{
  content: '';
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 50%;
  right: 40rpx;
  border-right: 2rpx solid #999999;
  border-bottom: 2rpx solid #999999;
  transform: translateY(-50%) rotate(-45deg);
}
.tips{
  font-size: 20rpx;
  color: #999;
  position: absolute;
  top: 50%;
  right: 80rpx;
  transform: translateY(-50%) ;
}
