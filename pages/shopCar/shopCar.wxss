/* pages/shopCar/shopCar.wxss */
.group{
  background: #fff;
  padding-left: 20rpx;
  padding-top: 40rpx;
}
.group>view{
  height: 102rpx;
  line-height: 102rpx;
  color: #333333;
  border-bottom: 2rpx solid #EEE;
  border-top: 2rpx solid #EEE;
  align-items: center;
  text-align: center;
  border-radius: 8rpx;
  background-color: #e89abe;
}
.group view image{
  width: 40rpx;
  height: 44rpx;
  margin-right: 28rpx;
}
.red-dot{
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #ff3a3a;
  border-radius: 100%;
  margin-left: 20rpx;
}
.arrow::after{
  content: '';
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 50%;
  right: 40rpx;
  border-right: 2rpx solid #999999;
  border-bottom: 2rpx solid #999999;
  transform: translateY(-50%) rotate(-45deg);
}
.tips{
  font-size: 20rpx;
  color: #999;
  position: absolute;
  top: 50%;
  right: 80rpx;
  transform: translateY(-50%) ;
}

/* goods.wxss*/
.quote-activity {
  position: relative;
  display: inline-flex;
  padding: 40rpx;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
}
.quote-activity image {
  width: 30%;
  height: 200rpx;
  position: relative;
  border-radius: 20rpx;
}
.quote-activity .quote-content {
  /* flex: 1; */
  width: 70%;
  /* width: calc(100% - 220rpx); */
}
.quote-activity .quote-content .activity-info {
  display: flex;
  justify-content: space-between;
}
.quote-activity .quote-content .activity-name {
  padding: 20rpx 18rpx 0rpx;
  height: 104rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.quote-activity .quote-content .activity-price {
  padding-top: 20rpx;
  font-size: 44rpx;
  color: #FF7D12;
}
.quote-activity .quote-content .activity-price text {
  font-size: 32rpx;
  justify-content: end;
}

.quote-activity .acitvity-footer {
  font-size: 30rpx;
  color: #999999;
  letter-spacing: 0;
  padding: 12rpx 18rpx;
  /* border-bottom: 1px dashed #E3E3E3; */
  display: flex;
}
.quote-activity .acitvity-footer image{
  width: 40rpx;
  height: 40rpx;
  /* padding: 5rpx 0rpx 0rpx 70rpx; */
}

.orderBtn {
  position: fixed;
  bottom: 0;
  background: #fff;
  box-shadow: 0 0 2px 0 #ccc;
  height: 100rpx;
  z-index: 1;
  /* margin-top: -20rpx; */
  width: 100%;
}
.orderBtn .rushBuy {
  font-size: 38rpx;
  color: #fff;
  text-align: center;
  /* width: 551rpx; */
  width: 100%;
  background: #f60;
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  padding: 28rpx 0;
  box-sizing: border-box;
  position: relative;
}