.quote-activity {
  position: relative;
  display: inline-flex;
  padding: 40rpx;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
}
.quote-activity image {
  width: 30%;
  height: 200rpx;
  position: relative;
  border-radius: 20rpx;
}
.quote-activity .quote-content {
  /* flex: 1; */
  width: 100%;
  /* width: calc(100% - 220rpx); */
}
.quote-activity .quote-content .activity-info {
  display: flex;
  justify-content: space-between;
}
.quote-activity .quote-content .activity-name {
  padding: 20rpx 18rpx 0rpx;
  height: 104rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.quote-activity .quote-content .activity-price {
  padding-top: 20rpx;
  font-size: 44rpx;
  color: #FF7D12;
}
.quote-activity .quote-content .activity-price text {
  font-size: 32rpx;
  justify-content: end;
}
.activity-amount{
  text-align: right;
  font-size: 24rpx;
}

.quote-activity .acitvity-footer {
  font-size: 30rpx;
  color: #999999;
  letter-spacing: 0;
  padding: 12rpx 18rpx;
  /* border-bottom: 1px dashed #E3E3E3; */
  display: flex;
}
.quote-activity .acitvity-footer image{
  width: 40rpx;
  height: 40rpx;
  /* padding: 5rpx 0rpx 0rpx 70rpx; */
}
