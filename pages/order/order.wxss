.paidTips {
  background-image: linear-gradient(90deg, #ff8f03 2%, #ff9e21 100%);
  width: 100%;
  position: relative;
  color: #fff;
  padding: 40rpx;
  box-sizing: border-box;
}
.orderBtn {
  background: #fff;
  box-shadow: 0 0 2px 0 #ccc;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}

.orderBtn .orderCancel {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  display: inline-block;
  width: 200rpx;
  height: 100%;
  vertical-align: middle;
  padding: 30rpx 0;
  box-sizing: border-box;
}

.orderBtn .rushBuy {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  width: 551rpx;
  background: #f60;
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  padding: 28rpx 0;
  box-sizing: border-box;
}
.order-title {
  font-size: 28rpx;
  color: #333;
  padding-left: 40rpx;
  padding-top: 40rpx;
}


